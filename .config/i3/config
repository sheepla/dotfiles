# Launch processes -------------------- {{{
# Set wallpaper
exec --no-startup-id "$HOME/.fehbg"

# Window transparency (compton)
exec --no-startup-id "compton -cbm 0.75"

# Enable nortification
exec --no-startup-id "dunst"

# Set key repeat rate
# format:
#     xset r rate <delay> [<rate>]
exec --no-startup-id "xset r rate 280 40"

# Reload ~/.Xresources
exec --no-startup-id "xrdb $HOME/.Xresources"

# Launch URxvt terminal daemon (if not already running)
exec --no-startup-id "urxvtd -q -o -f"

# }}}


