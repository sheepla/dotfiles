# Sound volume
bindsym $mod+plus     exec --no-startup-id "amixer -q sset Master 5%+ unmute"
bindsym $mod+minus    exec --no-startup-id "amixer -q sset Master 5%- unmute"
bindsym $mod+equal    exec --no-startup-id "amixer -q sset Master toggle"

